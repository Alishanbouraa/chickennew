<UserControl x:Class="PoultrySlaughterPOS.Views.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:converters="clr-namespace:PoultrySlaughterPOS.Converters"
             FlowDirection="RightToLeft"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- Value Converters -->
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="5,5,5,2"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#007BFF" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <fa:ImageAwesome Icon="ShoppingCart" Width="24" Height="24" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="نقطة البيع - إنشاء فاتورة" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="InvoiceNumberDisplay" 
                           Text="{Binding CurrentInvoice.InvoiceNumber, StringFormat='فاتورة رقم: {0}'}" 
                           FontSize="16" FontWeight="SemiBold" Foreground="White" 
                           VerticalAlignment="Center" Margin="20,0"/>

                <TextBlock Grid.Column="2" x:Name="DateTimeDisplay" 
                           Text="{Binding CurrentDateTime, StringFormat='التاريخ: {0:yyyy/MM/dd HH:mm}'}" 
                           FontSize="14" Foreground="#E3F2FD" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Invoice Data Entry -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">

                    <!-- Customer Selection Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="🏢 بيانات الزبون" Style="{StaticResource HeaderStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="اختيار الزبون *" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="CustomerComboBox" 
                                              Style="{StaticResource ComboBoxStyle}"
                                              ItemsSource="{Binding Customers}"
                                              SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                                              DisplayMemberPath="CustomerName"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True"/>
                                </StackPanel>

                                <Button Grid.Column="1" Content="إضافة زبون جديد" 
                                        Style="{StaticResource SecondaryButtonStyle}" 
                                        Width="120" Margin="10,25,0,0"
                                        Command="{Binding AddNewCustomerCommand}"/>
                            </Grid>

                            <!-- Customer Info Display -->
                            <Border Background="#F8F9FA" CornerRadius="5" Padding="10" Margin="0,10,0,0"
                                    Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="رقم الهاتف:" FontSize="12" Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding SelectedCustomer.PhoneNumber}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="العنوان:" FontSize="12" Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding SelectedCustomer.Address}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="الرصيد السابق:" FontSize="12" Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding SelectedCustomer.TotalDebt, Converter={StaticResource CurrencyConverter}}" 
                                                   FontWeight="Bold" Foreground="#DC3545"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Truck Selection Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="🚛 اختيار الشاحنة" Style="{StaticResource HeaderStyle}"/>

                            <TextBlock Text="الشاحنة *" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="TruckComboBox" 
                                      Style="{StaticResource ComboBoxStyle}"
                                      ItemsSource="{Binding AvailableTrucks}"
                                      SelectedItem="{Binding SelectedTruck, Mode=TwoWay}"
                                      DisplayMemberPath="TruckNumber"/>

                            <!-- Truck Info Display -->
                            <Border Background="#F8F9FA" CornerRadius="5" Padding="10" Margin="0,10,0,0"
                                    Visibility="{Binding SelectedTruck, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="اسم السائق:" FontSize="12" Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding SelectedTruck.DriverName}" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="آخر تحميل:" FontSize="12" Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding LastTruckLoadDate, StringFormat='{0:yyyy/MM/dd}'}" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Weight and Calculation Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="⚖️ الأوزان والحسابات" Style="{StaticResource HeaderStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Column -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="الوزن الفلتي (كغم) *" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="GrossWeightTextBox" 
                                             Style="{StaticResource InputFieldStyle}"
                                             Text="{Binding CurrentInvoice.GrossWeight, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"/>

                                    <TextBlock Text="وزن الأقفاص (كغم) *" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="CageWeightTextBox" 
                                             Style="{StaticResource InputFieldStyle}"
                                             Text="{Binding CurrentInvoice.CagesWeight, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"/>

                                    <TextBlock Text="عدد الأقفاص *" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="CageCountTextBox" 
                                             Style="{StaticResource InputFieldStyle}"
                                             Text="{Binding CurrentInvoice.CagesCount, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <!-- Right Column -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="الوزن الصافي (كغم)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Style="{StaticResource InputFieldStyle}"
                                             Text="{Binding CurrentInvoice.NetWeight, Mode=OneWay, StringFormat=F2}"
                                             IsReadOnly="True" Background="#F8F9FA"/>

                                    <TextBlock Text="سعر الوحدة (دولار/كغم) *" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="UnitPriceTextBox" 
                                             Style="{StaticResource InputFieldStyle}"
                                             Text="{Binding CurrentInvoice.UnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"/>

                                    <TextBlock Text="نسبة الخصم (%)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="DiscountTextBox" 
                                             Style="{StaticResource InputFieldStyle}"
                                             Text="{Binding CurrentInvoice.DiscountPercentage, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Panel - Invoice Preview and Totals -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">

                    <!-- Invoice Totals Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="💰 مجموع الفاتورة" Style="{StaticResource HeaderStyle}"/>

                            <!-- Calculation Summary -->
                            <Border Background="Linear Gradient" CornerRadius="8" Padding="15">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#E3F2FD" Offset="0"/>
                                        <GradientStop Color="#F8F9FA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <StackPanel>
                                    <!-- Calculation Steps -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="المجموع الجزئي:" FontSize="14"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding CurrentInvoice.TotalAmount, Converter={StaticResource CurrencyConverter}}" 
                                                   FontSize="14" FontWeight="SemiBold"/>
                                    </Grid>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="قيمة الخصم:" FontSize="14"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding DiscountAmount, Converter={StaticResource CurrencyConverter}}" 
                                                   FontSize="14" FontWeight="SemiBold" Foreground="#DC3545"/>
                                    </Grid>

                                    <Separator Margin="0,10"/>

                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="المجموع النهائي:" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding CurrentInvoice.FinalAmount, Converter={StaticResource CurrencyConverter}}" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#007BFF"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Balance Information -->
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="💳 معلومات الحساب" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="الرصيد السابق:" FontSize="14"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding CurrentInvoice.PreviousBalance, Converter={StaticResource CurrencyConverter}}" 
                                               FontSize="14" FontWeight="SemiBold"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="الرصيد الحالي:" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding CurrentInvoice.CurrentBalance, Converter={StaticResource CurrencyConverter}}" 
                                               FontSize="14" FontWeight="Bold" Foreground="#DC3545"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="⚡ إجراءات سريعة" Style="{StaticResource HeaderStyle}"/>

                            <Button Content="💾 حفظ وطباعة الفاتورة" 
                                    Style="{StaticResource SuccessButtonStyle}" 
                                    Command="{Binding SaveAndPrintInvoiceCommand}"
                                    IsEnabled="{Binding CanSaveInvoice}"/>

                            <Button Content="💾 حفظ بدون طباعة" 
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    Command="{Binding SaveInvoiceCommand}"
                                    IsEnabled="{Binding CanSaveInvoice}"/>

                            <Button Content="🖨️ طباعة سابقة" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding PrintPreviousInvoiceCommand}"/>

                            <Button Content="🔄 فاتورة جديدة" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding NewInvoiceCommand}"/>
                        </StackPanel>
                    </Border>

                    <!-- Validation Messages -->
                    <Border Style="{StaticResource CardStyle}" 
                            Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}"
                            BorderBrush="#DC3545" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="⚠️ تنبيهات التحقق" Style="{StaticResource HeaderStyle}" Foreground="#DC3545"/>
                            <ItemsControl ItemsSource="{Binding ValidationErrors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="#DC3545" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <fa:ImageAwesome Icon="{Binding StatusIcon}" Width="16" Height="16" 
                                     Foreground="{Binding StatusColor}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="#495057"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="إجمالي الفواتير اليوم: " FontSize="12" Foreground="#6C757D"/>
                    <TextBlock Text="{Binding TodayInvoiceCount}" FontSize="12" FontWeight="Bold" Foreground="#007BFF"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="آخر فاتورة: " FontSize="12" Foreground="#6C757D"/>
                    <TextBlock Text="{Binding LastInvoiceTime, StringFormat='{0:HH:mm}'}" FontSize="12" FontWeight="Bold" Foreground="#28A745"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>