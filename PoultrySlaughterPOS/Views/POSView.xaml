<UserControl x:Class="PoultrySlaughterPOS.Views.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:converters="clr-namespace:PoultrySlaughterPOS.Converters"
             xmlns:viewmodels="clr-namespace:PoultrySlaughterPOS.ViewModels"
             x:Name="POSViewControl"
             FlowDirection="RightToLeft"
             FontFamily="Segoe UI"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Enterprise-Grade Value Converters for Data Binding -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:WeightConverter x:Key="WeightConverter"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:DebtColorConverter x:Key="DebtColorConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- Professional Input Field Styles -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.1"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="Validation.HasError" Value="True">
                                <Setter Property="BorderBrush" Value="#DC3545"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Enterprise Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#6C757D"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Professional Label Styles -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,5,0,3"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007BFF"/>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Professional Header Section -->
        <Border Grid.Row="0" Background="#007BFF" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <fa:ImageAwesome Grid.Column="0" Icon="Calculator" Width="28" Height="28" 
                                 Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="نقطة البيع - Point of Sale System" 
                               FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="12" Foreground="#E3F2FF" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="{Binding StatusIcon}" Width="20" Height="20" 
                                     Foreground="{Binding StatusColor}" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding CurrentDateTime, StringFormat='HH:mm:ss'}" 
                               FontSize="14" Foreground="White" FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Invoice Data Entry -->
                <StackPanel Grid.Column="0">

                    <!-- Customer Selection Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="بيانات الزبون" 
                                           FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>

                                <!-- FIXED: Removed duplicate Content attribute -->
                                <Button Grid.Column="1" 
                                        Style="{StaticResource SecondaryButtonStyle}" 
                                        Width="100" Height="35"
                                        Command="{Binding AddNewCustomerCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Icon="UserPlus" Width="12" Height="12" Margin="0,0,5,0"/>
                                        <TextBlock Text="زبون جديد"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <TextBlock Text="اختر الزبون" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="CustomerSelectionComboBox"
                                      ItemsSource="{Binding Customers}"
                                      SelectedItem="{Binding SelectedCustomer}"
                                      DisplayMemberPath="CustomerName"
                                      Style="{StaticResource ComboBoxStyle}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"/>

                            <!-- Customer Information Display -->
                            <Grid Margin="0,10,0,0" 
                                  Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="رقم الهاتف" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding SelectedCustomer.PhoneNumber}" 
                                               FontSize="13" Foreground="#6C757D"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="الرصيد السابق" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding SelectedCustomer.TotalDebt, Converter={StaticResource CurrencyConverter}}" 
                                               Style="{StaticResource ValueStyle}"
                                               Foreground="{Binding SelectedCustomer.TotalDebt, Converter={StaticResource DebtColorConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Truck Selection Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="بيانات الشاحنة" 
                                       FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <TextBlock Text="اختر الشاحنة" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="TruckSelectionComboBox"
                                      ItemsSource="{Binding AvailableTrucks}"
                                      SelectedItem="{Binding SelectedTruck}"
                                      DisplayMemberPath="TruckNumber"
                                      Style="{StaticResource ComboBoxStyle}"/>

                            <!-- Truck Information Display -->
                            <Grid Margin="0,10,0,0" 
                                  Visibility="{Binding SelectedTruck, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="اسم السائق" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding SelectedTruck.DriverName}" 
                                               FontSize="13" Foreground="#6C757D"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="آخر تحميل" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding LastTruckLoadDate, StringFormat='dd/MM/yyyy'}" 
                                               FontSize="13" Foreground="#6C757D"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Weight and Quantity Input Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="بيانات الوزن والكمية" 
                                       FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="الوزن الفلتي (كغم)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="GrossWeightInput"
         Text="{Binding CurrentInvoice.GrossWeight, 
                UpdateSourceTrigger=PropertyChanged, 
                ValidatesOnDataErrors=True,
                NotifyOnValidationError=True}"
         Style="{StaticResource InputFieldStyle}"
         TextChanged="NumericInput_TextChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="وزن الأقفاص (كغم)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="CagesWeightInput"
         Text="{Binding CurrentInvoice.CagesWeight, 
                UpdateSourceTrigger=PropertyChanged, 
                ValidatesOnDataErrors=True,
                NotifyOnValidationError=True}"
         Style="{StaticResource InputFieldStyle}"
         TextChanged="NumericInput_TextChanged"/>

                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="عدد الأقفاص" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="CagesCountInput"
         Text="{Binding CurrentInvoice.CagesCount, 
                UpdateSourceTrigger=PropertyChanged, 
                ValidatesOnDataErrors=True,
                NotifyOnValidationError=True}"
         Style="{StaticResource InputFieldStyle}"
         TextChanged="NumericInput_TextChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="الوزن الصافي" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding CurrentInvoice.NetWeight, Converter={StaticResource WeightConverter}}" 
                                               Style="{StaticResource ValueStyle}" FontSize="16"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Pricing Configuration Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="بيانات السعر" 
                                       FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="سعر الكيلو (USD)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="UnitPriceInput"
         Text="{Binding CurrentInvoice.UnitPrice, 
                UpdateSourceTrigger=PropertyChanged, 
                ValidatesOnDataErrors=True,
                NotifyOnValidationError=True}"
         Style="{StaticResource InputFieldStyle}"
         TextChanged="NumericInput_TextChanged"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="نسبة الخصم (%)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="DiscountPercentageInput"
         Text="{Binding CurrentInvoice.DiscountPercentage, 
                UpdateSourceTrigger=PropertyChanged, 
                ValidatesOnDataErrors=True,
                NotifyOnValidationError=True}"
         Style="{StaticResource InputFieldStyle}"
         TextChanged="NumericInput_TextChanged"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <!-- Right Panel - Invoice Summary -->
                <StackPanel Grid.Column="2">

                    <!-- Comprehensive Invoice Summary Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ملخص الفاتورة" 
                                       FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Invoice Number -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="رقم الفاتورة:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentInvoice.InvoiceNumber}" 
                                           FontWeight="Bold" FontSize="14"/>

                                <!-- Total Amount -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="المبلغ الإجمالي:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentInvoice.TotalAmount, Converter={StaticResource CurrencyConverter}}" 
                                           Style="{StaticResource ValueStyle}"/>

                                <!-- Discount -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="مبلغ الخصم:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DiscountAmount, Converter={StaticResource CurrencyConverter}}" 
                                           FontSize="14" Foreground="#DC3545"/>

                                <!-- Final Amount -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="المبلغ النهائي:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentInvoice.FinalAmount, Converter={StaticResource CurrencyConverter}}" 
                                           Style="{StaticResource ValueStyle}" FontSize="18"/>

                                <!-- Previous Balance -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="الرصيد السابق:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentInvoice.PreviousBalance, Converter={StaticResource CurrencyConverter}}" 
                                           FontSize="14" Foreground="#6C757D"/>

                                <!-- Current Balance -->
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="الرصيد الحالي:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentInvoice.CurrentBalance, Converter={StaticResource CurrencyConverter}}" 
                                           Style="{StaticResource ValueStyle}" FontSize="16"/>

                                <!-- Separator -->
                                <Rectangle Grid.Row="6" Grid.ColumnSpan="2" Height="1" Fill="#DEE2E6" Margin="0,10"/>

                                <!-- Invoice Date -->
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="تاريخ الفاتورة:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding CurrentInvoice.InvoiceDate, StringFormat='dd/MM/yyyy HH:mm'}" 
                                           FontSize="12" Foreground="#6C757D"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Daily Statistics Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="إحصائيات اليوم" 
                                       FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="عدد الفواتير:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TodayInvoiceCount}" 
                                           FontWeight="Bold" FontSize="16" Foreground="#28A745"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="آخر فاتورة:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastInvoiceTime, StringFormat='HH:mm'}" 
                                           FontSize="12" Foreground="#6C757D"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Validation Errors Display -->
                    <Border Style="{StaticResource CardStyle}" Background="#FFF5F5" BorderBrush="#FED7D7"
                            Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <fa:ImageAwesome Icon="ExclamationTriangle" Width="16" Height="16" 
                                                 Foreground="#E53E3E" Margin="0,0,8,0"/>
                                <TextBlock Text="أخطاء في البيانات:" FontWeight="Bold" Foreground="#E53E3E"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding ValidationErrors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <Ellipse Width="4" Height="4" Fill="#E53E3E" 
                                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding}" FontSize="12" 
                                                       Foreground="#E53E3E" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Professional Action Buttons Section -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <fa:ImageAwesome Icon="Spinner" Width="16" Height="16" 
                                     Foreground="#007BFF" Margin="0,0,8,0"
                                     RenderTransformOrigin="0.5,0.5">
                        <fa:ImageAwesome.RenderTransform>
                            <RotateTransform/>
                        </fa:ImageAwesome.RenderTransform>
                        <fa:ImageAwesome.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                         From="0" To="360" Duration="0:0:1"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </fa:ImageAwesome.Triggers>
                    </fa:ImageAwesome>
                    <TextBlock Text="جاري المعالجة..." FontSize="12" Foreground="#007BFF" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- New Invoice Button -->
                <Button Grid.Column="2" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Width="120"
                        Command="{Binding NewInvoiceCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Plus" Width="14" Height="14" Margin="0,0,5,0"/>
                        <TextBlock Text="فاتورة جديدة"/>
                    </StackPanel>
                </Button>

                <!-- Print Previous Button -->
                <Button Grid.Column="3" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Width="120"
                        Command="{Binding PrintPreviousInvoiceCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="History" Width="14" Height="14" Margin="0,0,5,0"/>
                        <TextBlock Text="طباعة سابقة"/>
                    </StackPanel>
                </Button>

                <!-- Save Button -->
                <Button Grid.Column="4" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Width="120"
                        Command="{Binding SaveInvoiceCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Save" Width="14" Height="14" Margin="0,0,5,0"/>
                        <TextBlock Text="حفظ الفاتورة"/>
                    </StackPanel>
                </Button>

                <!-- Save and Print Button -->
                <Button Grid.Column="5" 
                        Style="{StaticResource SuccessButtonStyle}" 
                        Width="130"
                        Command="{Binding SaveAndPrintInvoiceCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Print" Width="14" Height="14" Margin="0,0,5,0"/>
                        <TextBlock Text="حفظ وطباعة"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>