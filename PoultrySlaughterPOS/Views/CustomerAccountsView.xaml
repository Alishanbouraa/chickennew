<UserControl x:Class="PoultrySlaughterPOS.Views.CustomerAccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PoultrySlaughterPOS.Converters"
             xmlns:viewmodels="clr-namespace:PoultrySlaughterPOS.ViewModels"
             x:Name="CustomerAccountsViewControl"
             FlowDirection="RightToLeft"
             FontFamily="Segoe UI"
             Background="#F8FAFC">

    <UserControl.Resources>
        <!-- Enhanced Value Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:DebtColorConverter x:Key="DebtColorConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Card Style -->
        <Style x:Key="HeaderCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#334155" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Modern Input Styles -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F5F9"/>
            <Setter Property="RowHeight" Value="52"/>
            <Setter Property="ColumnHeaderHeight" Value="56"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
            <Setter Property="RowBackground" Value="White"/>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCustomerDetailsVisible}" Value="True">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Text Style -->
        <Style x:Key="IconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Statistics Card Style -->
        <Style x:Key="StatisticsCardStyle" TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinWidth" Value="160"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Scrollable Container -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Statistics -->
                <RowDefinition Height="Auto"/>
                <!-- Search & Filters -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- System Header -->
            <Border Grid.Row="0" 
                    Style="{StaticResource HeaderCardStyle}"
                    Padding="32,20" 
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="إدارة حسابات الزبائن"
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="إدارة شاملة لمعلومات الزبائن والحسابات المالية"
                                   FontSize="14" 
                                   Foreground="#CBD5E1" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#60A5FA"/>
                        <TextBlock Text="{Binding TotalRecords, StringFormat='إجمالي الزبائن: {0}'}" 
                                   FontSize="13" Foreground="#CBD5E1" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Statistics Cards -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                <!-- Total Customers -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#EFF6FF">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="👥" Style="{StaticResource IconStyle}" 
                                   Foreground="#3B82F6" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="إجمالي الزبائن" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalCustomersCount}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#1E40AF" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Active Customers -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#F0FDF4">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="✅" Style="{StaticResource IconStyle}" 
                                   Foreground="#10B981" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="الزبائن النشطين" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding ActiveCustomersCount}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#059669" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Total Debt -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#FEF2F2">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="💰" Style="{StaticResource IconStyle}" 
                                   Foreground="#EF4444" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="إجمالي الديون" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalDebtAmount, StringFormat='{}{0:N0} USD'}" FontSize="20" FontWeight="Bold" 
                                   Foreground="#DC2626" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Customers with Debt -->
                <Border Style="{StaticResource StatisticsCardStyle}" Background="#FFF7ED">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="⚠️" Style="{StaticResource IconStyle}" 
                                   Foreground="#F59E0B" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock Text="زبائن مديونين" FontSize="12" Foreground="#6B7280" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding CustomersWithDebtCount}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#D97706" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Search and Filters Section -->
            <Border Grid.Row="2" 
                    Style="{StaticResource ModernCardStyle}" 
                    Padding="24,20" 
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="🔍" Style="{StaticResource IconStyle}" 
                                   Foreground="#6B7280" Margin="0,0,12,0"/>
                        <TextBlock Text="البحث والتصفية" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    </StackPanel>

                    <!-- Filter Controls -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Text -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="البحث (الاسم، الهاتف، العنوان)" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     x:Name="SearchTextBox"/>
                        </StackPanel>

                        <!-- Filter Options -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="خيارات التصفية" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <StackPanel>
                                <CheckBox Content="النشطين فقط" IsChecked="{Binding ShowActiveOnly}" 
                                          Margin="0,4"/>
                                <CheckBox Content="المديونين فقط" IsChecked="{Binding ShowDebtOnly}" 
                                          Margin="0,4"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Minimum Debt Filter -->
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="أقل مبلغ دين (USD)" 
                                       FontSize="13" FontWeight="Medium" 
                                       Foreground="#6B7280" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding MinimumDebtFilter, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Style="{StaticResource PrimaryButtonStyle}" 
                                    Width="100"
                                    Command="{Binding RefreshDataCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔄" Style="{StaticResource IconStyle}" 
                                               Margin="0,0,6,0" FontSize="14"/>
                                    <TextBlock Text="تحديث"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SecondaryButtonStyle}" 
                                    Width="100"
                                    Command="{Binding ClearFiltersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🧹" Style="{StaticResource IconStyle}" 
                                               Margin="0,0,6,0" FontSize="14"/>
                                    <TextBlock Text="مسح"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Customer List Panel -->
                <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Customer List Header -->
                        <Border Grid.Row="0" 
                                Background="#F8FAFC" 
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                Padding="20,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="👥" Style="{StaticResource IconStyle}" 
                                               Foreground="#374151" Margin="0,0,12,0"/>
                                    <TextBlock Text="قائمة الزبائن" 
                                               FontSize="16" FontWeight="SemiBold" 
                                               Foreground="#374151"/>
                                    <Border Background="#EFF6FF" 
                                            CornerRadius="12" 
                                            Padding="8,4" 
                                            Margin="12,0,0,0">
                                        <TextBlock Text="{Binding TotalRecords, StringFormat='{}{0} زبون'}" 
                                                   FontSize="12" FontWeight="Medium" 
                                                   Foreground="#1E40AF"/>
                                    </Border>
                                </StackPanel>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Width="120"
                                        Command="{Binding AddNewCustomerCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="➕" Style="{StaticResource IconStyle}" 
                                                   Margin="0,0,6,0" FontSize="14"/>
                                        <TextBlock Text="إضافة زبون"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Customer DataGrid -->
                        <DataGrid Grid.Row="1"
                                  x:Name="CustomersDataGrid"
                                  ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  Margin="12">

                            <DataGrid.Columns>
                                <!-- Customer Name -->
                                <DataGridTextColumn Header="اسم الزبون" 
                                                    Width="*"
                                                    Binding="{Binding CustomerName}"/>

                                <!-- Phone Number -->
                                <DataGridTextColumn Header="الهاتف" 
                                                    Width="120"
                                                    Binding="{Binding PhoneNumber}"/>

                                <!-- Total Debt -->
                                <DataGridTextColumn Header="الرصيد (USD)" 
                                                    Width="100"
                                                    Binding="{Binding TotalDebt, StringFormat=N2}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" 
                                                    Value="{Binding TotalDebt, Converter={StaticResource DebtColorConverter}}"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Status -->
                                <DataGridTextColumn Header="الحالة" 
                                                    Width="80"
                                                    Binding="{Binding IsActive, Converter={x:Static converters:TruckAvailabilityConverter.Instance}}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Controls -->
                        <Border Grid.Row="2" 
                                Background="#F8FAFC" 
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,1,0,0"
                                Padding="16,12"
                                Visibility="{Binding IsPaginationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Page Info -->
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding CurrentPage, StringFormat='صفحة {0}'}" 
                                           FontSize="12" Foreground="#6B7280" 
                                           VerticalAlignment="Center"/>

                                <!-- Navigation Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="الأولى" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="60" Height="32"
                                            Command="{Binding GoToFirstPageCommand}"
                                            IsEnabled="{Binding CanGoToPreviousPage}"/>
                                    <Button Content="السابقة" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="60" Height="32"
                                            Command="{Binding GoToPreviousPageCommand}"
                                            IsEnabled="{Binding CanGoToPreviousPage}"/>
                                    <Button Content="التالية" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="60" Height="32"
                                            Command="{Binding GoToNextPageCommand}"
                                            IsEnabled="{Binding CanGoToNextPage}"/>
                                    <Button Content="الأخيرة" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="60" Height="32"
                                            Command="{Binding GoToLastPageCommand}"
                                            IsEnabled="{Binding CanGoToNextPage}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Customer Actions -->
                        <Border Grid.Row="3" 
                                Background="White" 
                                Padding="16,12">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource PrimaryButtonStyle}" 
                                        Width="100"
                                        Command="{Binding EditCustomerCommand}"
                                        IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✏️" Style="{StaticResource IconStyle}" 
                                                   Margin="0,0,6,0" FontSize="14"/>
                                        <TextBlock Text="تعديل"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource DangerButtonStyle}" 
                                        Width="100"
                                        Command="{Binding DeleteCustomerCommand}"
                                        IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🗑️" Style="{StaticResource IconStyle}" 
                                                   Margin="0,0,6,0" FontSize="14"/>
                                        <TextBlock Text="حذف"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Details Panel -->
                <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Details Header -->
                        <Border Grid.Row="0" 
                                Background="#F8FAFC" 
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                Padding="24,16">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📊" Style="{StaticResource IconStyle}" 
                                           Foreground="#374151" Margin="0,0,12,0"/>
                                <TextBlock Text="تفاصيل الزبون" 
                                           FontSize="18" FontWeight="SemiBold" 
                                           Foreground="#374151"/>
                                <TextBlock Text="{Binding SelectedCustomer.CustomerName, StringFormat=' - {0}'}" 
                                           FontSize="16" FontWeight="Medium" 
                                           Foreground="#6B7280"
                                           Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>

                        <!-- Tab Navigation -->
                        <Border Grid.Row="1" 
                                Background="White" 
                                BorderBrush="#E5E7EB"
                                BorderThickness="0,0,0,1"
                                Padding="20,12">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="البيانات الأساسية" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="120"
                                        Command="{Binding ShowCustomerDetailsCommand}"/>
                                <Button Content="المعاملات" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="100"
                                        Command="{Binding ShowTransactionHistoryCommand}"/>
                                <Button Content="الدفعات" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="100"
                                        Command="{Binding ShowPaymentHistoryCommand}"/>
                                <Button Content="تحليل الديون" 
                                        Style="{StaticResource TabButtonStyle}"
                                        Width="120"
                                        Command="{Binding ShowDebtAnalysisCommand}"/>
                            </StackPanel>
                        </Border>

                        <!-- Content Area -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="24">
                                <!-- Customer Details View -->
                                <StackPanel Visibility="{Binding IsCustomerDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!-- Customer Info Card -->
                                    <Border Style="{StaticResource ModernCardStyle}" 
                                            Padding="20" Margin="0,0,0,16"
                                            Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="الاسم:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedCustomer.CustomerName}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="الهاتف:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedCustomer.PhoneNumber}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="العنوان:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedCustomer.Address}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="الرصيد الحالي:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                                       Text="{Binding SelectedCustomer.TotalDebt, StringFormat='{}{0:N2} USD'}" 
                                                       Foreground="{Binding SelectedCustomer.TotalDebt, Converter={StaticResource DebtColorConverter}}"
                                                       FontWeight="Bold" Margin="0,8"/>

                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="الحالة:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                                       Text="{Binding SelectedCustomer.IsActive, Converter={x:Static converters:TruckAvailabilityConverter.Instance}}" 
                                                       Margin="0,8"/>

                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="تاريخ الإنشاء:" 
                                                       FontWeight="Medium" Margin="0,8,16,8"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" 
                                                       Text="{Binding SelectedCustomer.CreatedDate, StringFormat='{}{0:yyyy/MM/dd}'}" 
                                                       Margin="0,8"/>
                                        </Grid>
                                    </Border>

                                    <!-- Actions -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Button Style="{StaticResource WarningButtonStyle}" 
                                                Width="140"
                                                Command="{Binding RecalculateCustomerBalanceCommand}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🧮" Style="{StaticResource IconStyle}" 
                                                           Margin="0,0,6,0" FontSize="14"/>
                                                <TextBlock Text="إعادة حساب الرصيد"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <!-- No Selection Message -->
                                    <Border Style="{StaticResource ModernCardStyle}" 
                                            Padding="40" 
                                            HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="👤" Style="{StaticResource IconStyle}" 
                                                       FontSize="48" Foreground="#CBD5E1" Margin="0,0,0,16"/>
                                            <TextBlock Text="اختر زبون من القائمة لعرض التفاصيل" 
                                                       FontSize="16" Foreground="#6B7280" 
                                                       TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Transaction History View -->
                                <StackPanel Visibility="{Binding IsTransactionHistoryVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!-- Date Range Filter -->
                                    <Border Style="{StaticResource ModernCardStyle}" 
                                            Padding="20" Margin="0,0,0,16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="16"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="من تاريخ" FontSize="13" FontWeight="Medium" 
                                                           Foreground="#6B7280" Margin="0,0,0,6"/>
                                                <DatePicker SelectedDate="{Binding StartDate}" 
                                                            Height="40" FontSize="14"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="إلى تاريخ" FontSize="13" FontWeight="Medium" 
                                                           Foreground="#6B7280" Margin="0,0,0,6"/>
                                                <DatePicker SelectedDate="{Binding EndDate}" 
                                                            Height="40" FontSize="14"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Invoices DataGrid -->
                                    <DataGrid ItemsSource="{Binding CustomerInvoices}"
                                              SelectedItem="{Binding SelectedInvoice}"
                                              Style="{StaticResource ModernDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              MaxHeight="400">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="رقم الفاتورة" 
                                                                Width="120"
                                                                Binding="{Binding InvoiceNumber}"/>
                                            <DataGridTextColumn Header="التاريخ" 
                                                                Width="100"
                                                                Binding="{Binding InvoiceDate, StringFormat=yyyy/MM/dd}"/>
                                            <DataGridTextColumn Header="الوزن الصافي" 
                                                                Width="100"
                                                                Binding="{Binding NetWeight, StringFormat=N2}"/>
                                            <DataGridTextColumn Header="المبلغ النهائي" 
                                                                Width="120"
                                                                Binding="{Binding FinalAmount, StringFormat=N2}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>

                                <!-- Payment History View -->
                                <StackPanel Visibility="{Binding IsPaymentHistoryVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!-- Payments DataGrid -->
                                    <DataGrid ItemsSource="{Binding CustomerPayments}"
                                              SelectedItem="{Binding SelectedPayment}"
                                              Style="{StaticResource ModernDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              MaxHeight="400">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="التاريخ" 
                                                                Width="100"
                                                                Binding="{Binding PaymentDate, StringFormat=yyyy/MM/dd}"/>
                                            <DataGridTextColumn Header="المبلغ" 
                                                                Width="120"
                                                                Binding="{Binding Amount, StringFormat=N2}"/>
                                            <DataGridTextColumn Header="طريقة الدفع" 
                                                                Width="100"
                                                                Binding="{Binding PaymentMethod}"/>
                                            <DataGridTextColumn Header="ملاحظات" 
                                                                Width="*"
                                                                Binding="{Binding Notes}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>

                                <!-- Debt Analysis View -->
                                <StackPanel Visibility="{Binding IsDebtAnalysisVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="تحليل الديون - قيد التطوير" 
                                               FontSize="16" Foreground="#6B7280" 
                                               HorizontalAlignment="Center" Margin="40"/>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="4" 
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    CornerRadius="12">
                <Border Background="White" 
                        CornerRadius="16" 
                        Padding="40"
                        MaxWidth="300"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="48" Height="48" Margin="0,0,0,20"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <RotateTransform/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                             From="0" To="360" Duration="0:0:1.5"
                                                             RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Ellipse Fill="#3B82F6" Opacity="0.2"/>
                        </Border>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#374151" TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>